<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/recyclerview_bg_selector"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_empty_avatar" />

        <TextView
            android:id="@+id/tv_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_avatar"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:onClick="true"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="username" />

        <ImageView
            android:id="@+id/iv_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_screen_name"
            android:layout_alignTop="@id/tv_screen_name"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_screen_name"
            android:onClick="true"
            android:src="@drawable/avatar_vip" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar"
            android:layout_alignLeft="@id/tv_screen_name"
            android:layout_below="@id/tv_screen_name"
            android:layout_toRightOf="@id/iv_avatar"
            android:gravity="center_vertical"
            android:textSize="12sp"
            tools:text="xx小时前" />

        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_time"
            android:layout_alignTop="@id/tv_time"
            android:layout_below="@id/tv_screen_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_time"
            android:gravity="center_vertical"
            android:textSize="12sp"
            tools:text="iPhone 6 Plus" />

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/tv_screen_name"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_screen_name"
            android:layout_centerVertical="true"
            android:background="@drawable/text_selector"
            android:clickable="true"
            android:src="@drawable/ic_detail_comment_dark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="回复@活得好像一条狗:已经私信" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/activity_bg_color" />


    <TextView
        android:id="@+id/tv_reply_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        tools:text="\@活得好像一条狗回复@坏孩子:可以的" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_weibo_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/iv_weibo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_weibo_avatar"
            tools:text="\@量院速冻" />

        <TextView
            android:id="@+id/iv_weibo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_weibo_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_weibo_avatar"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            tools:text="冻友冻友，挖掘机哪家强?冻友冻友，挖掘机哪家强?冻友冻友，挖掘机哪家强?冻友冻友，挖掘机哪家强?冻友冻友，挖掘机哪家强?冻友冻挖友冻挖掘机哪家强挖掘机哪家强?" />

    </RelativeLayout>

</LinearLayout>