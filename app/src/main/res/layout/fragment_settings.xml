<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yuqirong.koku.view.AboutTextView
        android:id="@+id/atv_font_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content="标准字体"
        app:subject="@string/font_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <com.yuqirong.koku.view.SettingsView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_subject="使用内置浏览器" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <com.yuqirong.koku.view.SettingsView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_subject="振动反馈" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <com.yuqirong.koku.view.AboutTextView
        android:id="@+id/atv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content="我要狂吐槽！"
        app:subject="意见反馈" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc" />

    <com.yuqirong.koku.view.AboutTextView
        android:id="@+id/atv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content="取消授权"
        app:subject="注销" />

</LinearLayout>